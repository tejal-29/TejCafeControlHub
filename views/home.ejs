<%- include('layout/header') %>

<div class="container my-5" style="background-color: #fdfdf0; padding: 30px; border-radius: 10px;">
    <!-- Welcome Section -->
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1 class="display-4" style="font-weight: bold; color: #d34600;">Welcome to CafeSerendipity</h1>
            <p class="lead" style="color: #6c757d;">"Good food is the foundation of genuine happiness."</p>
            <p class="text-muted">Discover your favorite flavors and create unforgettable memories with every bite.</p>
            <hr class="my-4" style="border-top: 2px solid #d30031;">
            <h2 class="text-secondary mt-4" style="color: #a04000;">Our Menu</h2>
            <p class="text-muted">"Life happens, coffee helps. Let's make your day better!"</p>
        </div>
    </div>

    <!-- Menu Section -->
    <div class="row mt-5">
        <% if(menu && menu.length > 0) { %>
            <% menu.forEach((row, index) => { %>
                <div class="col-md-6 col-lg-4 my-3">
                    <div class="card shadow-sm border-0 h-100">
                        <img src="<%= row.image %>" class="card-img-top img-fluid" alt="<%= row.name %>">
                        <div class="card-body text-center">
                            <h5 class="card-title text-primary"><%= row.name %></h5>
                            <p class="card-text text-muted">Price: <strong>$<%= row.price %></strong></p>
                            <p class="card-text"><%= row.description %></p>
                        </div>
                        <div class="card-footer bg-white border-0 text-center">
                            <button class="btn btn-outline-primary btn-sm">Order Now</button>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12">
                <h1 class="text-center text-secondary mt-5">
                    "Oops! Our kitchen is resting. No food items found in the database!"
                </h1>
                <p class="text-center text-muted">"But don't worry, the best things are worth the wait!"</p>
            </div>
        <% } %>
    </div>

    <!-- Inspirational Section -->
    <div class="row mt-5">
        <div class="col-lg-12 text-center">
            <h3 class="text-primary">"Good vibes, great food, amazing company."</h3>
            <p class="text-muted">At CafeSerendipity, every meal is a story, and every story is crafted with love.</p>
            <blockquote class="blockquote text-center mt-4" 
                        style="border-left: 5px solid #d35400; padding-left: 20px; max-width: 600px; margin: 0 auto; background: rgba(255, 255, 255, 0.4); color: #6c757d; border-radius: 8px; padding: 15px 20px;">
                <p class="mb-2 font-italic" style="font-size: 1.2rem; color: #d35400;">"People who love to eat are always the best people."</p>
                <p class="text-end" style="font-size: 1rem; font-weight: bold; margin-top: 10px; color: #6c757d;">- Tejal </p>
            </blockquote>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
