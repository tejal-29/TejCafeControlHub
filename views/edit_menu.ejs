<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light text-center">Edit Food item (<%= menu.name %>)</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update/<%= menu._id %>" method="post" id="edit-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="category">Category</label>
                            <input type="text" name="category" class="form-control form-control-lg" placeholder="Enter category" value="<%= menu.category %>" required />
                        </div>
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" value="<%= menu.name %>" required />
                        </div>
                        <div class="mb-3">
                            <label for="price">Price</label>
                            <input type="text" name="price" class="form-control form-control-lg" placeholder="Enter price" value="<%= menu.price %>" required />
                        </div>
                        <div class="mb-3">
                            <label for="description">Description</label>
                            <textarea name="description" class="form-control form-control-lg" placeholder="Enter description" rows="4"><%= menu.description %></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input class="form-control form-control-lg" type="file" name="image" />
                            <!-- Display the old image next to the image input field -->
                            <img src="<%= menu.image %>" width="50" class="img-thumbnail mt-1">
                        </div>
                        <!-- Include a hidden field for the old image -->
                        <input type="hidden" name="old_image" value="<%= menu.image %>">
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Update Menu" class="btn btn-success btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
