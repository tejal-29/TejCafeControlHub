<%- include('layout/header') %>

<div class="container my-5" style="background-color: #fdf6f0; padding: 30px; border-radius: 10px;">
    <!-- Page Title -->
    <h1 class="text-center my-4" style="font-weight: bold; color: #d35400;"><%= title %></h1>

    <!-- Contact Section -->
    <div class="row">
        <div class="col-lg-12">
            <p class="lead text-center" style="color: #6c757d;">
                We'd love to hear from you! Whether you have questions, feedback, or just want to say hello, our team is here to help.
            </p>
        </div>
    </div>

    <!-- Contact Details -->
    <div class="row mt-5">
        <div class="col-lg-6">
            <h3 style="color: #a04000; font-weight: bold;">Contact Information</h3>
            <ul class="list-unstyled" style="color: #6c757d; font-size: 1.1rem; line-height: 1.8;">
                <% contactInfo.forEach(info => { %>
                    <li>
                        <strong style="color: #d35400;"><%= info.label %>:</strong> <%= info.value %>
                    </li>
                <% }) %>
            </ul>
        </div>

        <!-- Cafe Location -->
        <div class="col-lg-6">
            <h3 style="color: #a04000; font-weight: bold;">Visit Us</h3>
            <p style="color: #6c757d; line-height: 1.8;">
                Our cozy cafe is located in the heart of the city, offering a warm and inviting atmosphere for you to unwind and indulge. 
                Stop by to experience great food, coffee, and conversations!
            </p>
            <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.835434509372!2d144.95373631531627!3d-37.817209979751524!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad65d5df0c73d13%3A0x5045675218ce6e0!2z5Y2U5L2T6Lev!5e0!3m2!1sen!2sin!4v1633024403725!5m2!1sen!2sin"
                width="100%" 
                height="300" 
                style="border: 0; border-radius: 8px;" 
                allowfullscreen="" 
                loading="lazy">
            </iframe>
        </div>
    </div>

    <!-- Contact Form -->
    <div class="row mt-5">
        <div class="col-lg-12">
            <h3 class="text-center" style="color: #a04000; font-weight: bold;">Get In Touch</h3>
            <p class="text-center" style="color: #6c757d;">Have a question or feedback? Drop us a message, and we'll get back to you soon!</p>
            <form action="/contact" method="POST" class="mt-4" style="max-width: 600px; margin: 0 auto;">
                <div class="mb-3">
                    <label for="name" class="form-label" style="color: #a04000;">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label" style="color: #a04000;">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label" style="color: #a04000;">Message</label>
                    <textarea class="form-control" id="message" name="message" rows="5" placeholder="Type your message here..." required></textarea>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary" style="background-color: #d35400; border: none;">Send Message</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
